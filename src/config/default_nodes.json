{
  "start": {
    "displayName": "Start Node",
    "icon": "Play",
    "bgColor": "bg-green-500",
    "borderColor": "border-green-400",
    "textColor": "text-white",
    "inputs": {},
    "outputs": {
      "trigger": {
        "dataType": "signal",
        "description": "Triggers the next node in the workflow"
      }
    }
  },

  "end": {
    "displayName": "End Node",
    "icon": "Square",
    "bgColor": "bg-red-500",
    "borderColor": "border-red-400",
    "textColor": "text-white",
    "inputs": {
      "input": {
        "dataType": "any",
        "description": "Input received from the previous node"
      }
    },
    "outputs": {}
  },

  "input": {
    "displayName": "Input Node",
    "icon": "Upload",
    "bgColor": "bg-indigo-500",
    "borderColor": "border-indigo-400",
    "textColor": "text-white",
    "inputs": {},
    "outputs": {
      "data": {
        "dataType": "any",
        "description": "User-provided input data"
      }
    }
  },

  "llm": {
    "displayName": "LLM Node",
    "icon": "Brain",
    "bgColor": "bg-blue-500",
    "borderColor": "border-blue-400",
    "textColor": "text-white",
    "inputs": {
      "model": {
        "dataType": "string",
        "required": true,
        "default": "gpt-3.5-turbo",
        "description": "LLM model identifier"
      },
      "temperature": {
        "dataType": "number",
        "required": false,
        "default": 0.7,
        "description": "Sampling temperature"
      },
      "user_prompt": {
        "dataType": "string",
        "required": true,
        "description": "Prompt or query to the model"
      }
    },
    "outputs": {
      "response": {
        "dataType": "string",
        "description": "Generated text response"
      },
      "confidence": {
        "dataType": "number",
        "description": "Confidence or likelihood score"
      },
      "tokens_used": {
        "dataType": "number",
        "description": "Total tokens consumed"
      }
    }
  },

  "tool": {
    "displayName": "Tool Node",
    "icon": "Wrench",
    "bgColor": "bg-green-600",
    "borderColor": "border-yellow-300",
    "textColor": "text-white",
    "inputs": {
      "tool_name": {
        "dataType": "string",
        "required": true,
        "description": "The name or identifier of the tool"
      },
      "parameters": {
        "dataType": "object",
        "required": false,
        "description": "Key-value configuration parameters"
      }
    },
    "outputs": {
      "result": {
        "dataType": "any",
        "description": "Result produced by the tool"
      },
      "status": {
        "dataType": "string",
        "description": "Execution or completion status"
      },
      "error": {
        "dataType": "string",
        "description": "Error message, if execution failed"
      }
    }
  },

  "interrupt": {
    "displayName": "Interrupt Node",
    "icon": "PauseCircle",
    "bgColor": "bg-yellow-500",
    "borderColor": "border-purple-400",
    "textColor": "text-white",
    "inputs": {
      "message": {
        "dataType": "string",
        "required": true,
        "default": "Please provide input",
        "description": "Prompt shown to the user"
      },
      "timeout": {
        "dataType": "number",
        "required": false,
        "default": 300,
        "description": "Timeout duration in seconds"
      }
    },
    "outputs": {
      "user_input": {
        "dataType": "string",
        "description": "Captured user input text"
      },
      "approved": {
        "dataType": "boolean",
        "description": "User approval or confirmation status"
      }
    }
  }
}
